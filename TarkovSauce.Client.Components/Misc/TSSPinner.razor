@if (IsSpinning)
{
    <div class="spinner-container">
        <div class="lds-dual-ring"></div>
    </div>
}
<style>
    .spinner-container {
        position: absolute;
        top: 0;
        right: 0;
        left: 0;
        bottom: 0;
        width: 100%;
        height: 100%;
        background-color: #00000050;
        z-index: 100000;
    }

    .lds-dual-ring {
        display: inline-block;
        width: 80px;
        height: 80px;
        margin-left: 48%;
        margin-top: 40vh;
        position: relative;
    }

        .lds-dual-ring:after {
            content: " ";
            display: block;
            width: 64px;
            height: 64px;
            margin: 8px;
            border-radius: 50%;
            border: 6px solid var(--primary-90);
            border-color: var(--primary-90) transparent var(--primary-90) transparent;
            animation: lds-dual-ring 1.2s linear infinite;
        }
</style>

@code {
    [Parameter]
    public bool IsSpinning { get; set; }
    [Parameter]
    public EventCallback<bool> IsSpinningChanged { get; set; }
}